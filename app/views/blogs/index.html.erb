<div class="lists">
  <% @blogs.each do |blog|%>
    <div class="lists__list">
      <%= link_to blog_path(blog.id), class: "lists__list-post-show" do %>
        <div class="lists__list-post" style="background-image: url(<%= blog.image %>);">
        
          <%= blog.user.nickname %>
          <%= blog.created_at.strftime("%Y-%m-%d %H:%M") %>
    </div>
      <% end %>
    </div>
  <% end %>
</div>