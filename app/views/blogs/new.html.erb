<%= render "header"%>
<div class="title">POSTING</div>

<%= form_with model: @blog, local: true do |f|%>
  <%= f.text_field :name, placeholder: "name: kuru hinata", class: "name" %>
  <%= f.text_field :image, placeholder: "IMAGE URL", class: "image" %>
  <%= f.text_area :text, placeholder: "COMMENT", rows: "3", class: "text" %>
  <%= f.submit "PUSH ME", class: "btn"%>
<% end %>